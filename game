<h1>ðŸŒŸ CEFR A1 Vocabulary Extractor</h1>
<p>Paste your story below:</p>

<textarea id="text" placeholder="Paste your story here..."></textarea><br>
<button onclick="extractVocab()">Extract Vocabulary</button>

<div id="results"></div>

<footer>Created by Young Learners Curriculum Â© 2025</footer>

<script>
// Static CEFR A1 word list (real words â‰¤5 letters)
const cefrWords = new Set([
  'apple','house','table','chair','water',
  'happy','small','green','light','child',
  'smile','heart','dream','world','family',
  'learn','clean','brown','white','black',
  'grass','story','sound','book','pen',
  'bag','mouse','train','plane','cloud',
  'tree','fish','bird','sun','moon',
  'milk','eggs','bread','fruit'
]);

// Exclude articles and common function words
const excludedWords = new Set([
  'a','an','the','and','but','or','so','if','for','nor','yet','with','from','that'
]);

function extractVocab() {
  const text = document.getElementById('text').value.toLowerCase().trim();
  if (!text) {
    alert('Paste your story to extract words.');
    return;
  }

  // Clean and split
  const tokens = text.replace(/[^a-z\s]/g, ' ').split(/\s+/);

  // Filter: length 2â€“5, in A1 list, not excluded
  const filtered = tokens.filter(w =>
    w.length >= 2 && w.length <= 5 &&
    cefrWords.has(w) &&
    !excludedWords.has(w)
  );

  // Unique and shuffle
  const unique = Array.from(new Set(filtered));
  for (let i = unique.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [unique[i], unique[j]] = [unique[j], unique[i]];
  }

  // Select up to 4
  const selected = unique.slice(0, 4);

  // Display
  const container = document.getElementById('results');
  container.innerHTML = '';
  if (selected.length === 0) {
    container.innerHTML = '<p>No matching words found.</p>';
    return;
  }

  selected.forEach(w => {
    const div = document.createElement('div');
    div.className = 'vocab-box';
    div.textContent = w.toUpperCase();
    container.appendChild(div);
  });
}
</script>

